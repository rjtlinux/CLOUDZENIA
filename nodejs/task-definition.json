[
  {
    "name": "hello-microservice",
    "image": "${aws_account_id}.dkr.ecr.${aws_region}.amazonaws.com/hello-microservice:latest",
    "essential": true,
    "portMappings": [
      {
        "containerPort": 3000,
        "protocol": "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/hello-microservice",
        "awslogs-region": "${aws_region}",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
] 